<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <EditText
        android:hint="@string/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:inputType="text"
        android:textAlignment="center"
        android:id="@+id/usernameTextView" />
    <EditText
        android:hint="@string/passwordTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:inputType="textVisiblePassword"
        android:textAlignment="center"
        android:id="@+id/passwordTextView" />
    <Button
        android:text="@string/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton" />
    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/helloTextView" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:hint="@string/todoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_weight="1" 
        android:id="@+id/todoTextView" />
    <Button
        android:text="@string/addTodoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4" 
        android:id="@+id/addTodoButton" />
    </LinearLayout>

    <TextView
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emptyRow" />
    <ListView
        android:text="@string/taskListView"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/taskListView" />
</LinearLayout>